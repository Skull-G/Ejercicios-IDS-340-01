using System;

class ProgramaMetodos
{
    static void Main(string[] args)
    {
        Console.Write("Ingresa un n√∫mero para calcular su cuadrado: ");
        int numero = int.Parse(Console.ReadLine());

        int resultado = CalcularCuadrado(numero);
        Console.WriteLine($"El cuadrado de {numero} es {resultado}.");
    }

    static int CalcularCuadrado(int num)
    {
        return num * num;
    }
}
